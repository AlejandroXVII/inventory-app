extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='name (Iphone 14)' name='name' required value=(undefined===item ? '' : item.name) )
      label(for='description') Description:
      textarea#description.form-control(placeholder='description' name='description' required)= undefined===item ? '' : item.description
      label(for='price') Price:
      input#price.form-control(type='number' name='price' value=(undefined===item ? '' : item.price) )
      label(for='number_in_stock') number_in_stock:
      input#number_in_stock.form-control(type='number' name='number_in_stock' value=(undefined===item ? '' : item.number_in_stock) )
      label(for='category') category:
      select#category.form-control(name='category' required)
        option(value='') --Please select a category--
        for category in categories
          if book
            if category._id.toString()===book.category._id.toString()
              option(value=category._id selected) #{category.name}
            else
              option(value=category._id) #{category.name}
          else
            option(value=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
